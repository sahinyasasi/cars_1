<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>MY APP</title>
  </head>
  <body>
    <h1>May Node and Express be with you.</h1>
    <form action="/cars" method="POST">
      <input
        type="brand"
        name="brand"
        class="form-select"
        placeholder="select brand"
        aria-describedby="brandHelp"
        autocomplete="off"
        list="brands"
      />
      <datalist id="brands">
        <%let arr=[];%> <%for(let i=0;i< cars.length;i++){%>
        <%if(!arr.includes(cars[i].brand)){%> <%arr.push(cars[i].brand);%>
        <%}}%> <% for(var i = 0; i < arr.length; i++) {%>
        <option><%= arr[i] %></option>
        <% } %>
      </datalist>

      <input
        type="model"
        name="model"
        class="form-select"
        placeholder="select model"
        aria-describedby="modelHelp"
        list="models"
        autocomplete="off"
      />
      <datalist id="models">
        <% for(var i = 0; i < cars.length; i++) {%>
        <option><%= cars[i].model %></option>
        <% } %>
      </datalist>

      <input
        type="variant"
        name="variant"
        class="form-select"
        placeholder="select variant"
        aria-describedby="variantHelp"
        list="variants"
        autocomplete="off"
      />

      <datalist id="variants">
        arr=[]; let brand=req.body.brand; <% for(var i = 0; i < cars.length;
        i++) {%>
        <option><%= cars[i].brand %></option>
        <% } %>
      </datalist>
      <button type="submit" id="submit">Submit</button>
    </form>
    <h2>cars</h2>

    <ul class="cars">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < cars.length; i++) {%>
      <li class="car">
        <!-- Output name from the iterated quote object -->
        <span><%= cars[i].brand %></span>: <span><%= cars[i].model %></span>:
        <!-- Output quote from the iterated quote object -->
        <span><%= cars[i].variant %></span>
      </li>
      <% } %>
    </ul>
    <div>
      <button id="update-button">add varinat</button>
    </div>
    <script src="/main.js"></script>
  </body>
</html>
