<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>MY APP</title>
  </head>
  <body>
    <h1>May Node and Express be with you.</h1>
    <form action="/cars" method="POST">
      <input type="text" placeholder="brand" name="brand" />
      <input type="text" placeholder="model" name="model" />
      <input type="text" placeholder="variants" name="variant" />
      <button type="submit">Submit</button>
    </form>
    <h2>cars</h2>

    <ul class="cars">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < cars.length; i++) {%>
      <li class="car">
        <!-- Output name from the iterated quote object -->
        <span><%= cars[i].brand %></span>: <span><%= cars[i].model %></span>:
        <!-- Output quote from the iterated quote object -->
        <span><%= cars[i].variant %></span>
      </li>
      <% } %>
    </ul>
    <div>
      <button id="update-button">add varinat</button>
    </div>
    <script src="/main.js"></script>
  </body>
</html>
